<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_main_dialog_tutorial"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <TextView
        android:id="@+id/text_swipe_right_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe right to choose language\n any time on panel button!"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/constraint_main_dialog_tutorial"
        app:layout_constraintBottom_toBottomOf="@id/constraint_main_dialog_tutorial"
        app:layout_constraintLeft_toLeftOf="@id/constraint_main_dialog_tutorial"
        app:layout_constraintRight_toRightOf="@id/constraint_main_dialog_tutorial"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_tutorial_swipe_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/animation_swipe"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toBottomOf="@id/text_swipe_right_tutorial"
        app:layout_constraintBottom_toBottomOf="@id/constraint_main_dialog_tutorial"
        app:layout_constraintLeft_toLeftOf="@id/constraint_main_dialog_tutorial"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
